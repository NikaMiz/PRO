<Window x:Class="ХранительПРО.ВебСервис.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ХранительПРО.ВебСервис"
        mc:Ignorable="d"
        Title="ХранительПРО" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <TextBlock TextAlignment="Center" FontSize="20" FontWeight="Bold" Margin="0 50 0 0"><Run Text="Авторизация"/></TextBlock>
        </StackPanel>
        <StackPanel>
            <TextBox Height="30" Width="300" AcceptsReturn="True" Margin="0 100 0 0">
            </TextBox>
            <PasswordBox PasswordChar="*" Height="30" Width="300" Margin="0 20 0 0"/>
        </StackPanel>
        <StackPanel>
            <Button x:Name="RegistrationBTN" Width="100" Height="30" Content="Регистрация" Margin="0 300 250 0" FontSize="15" FontWeight="Bold" Click="RegistrationBTN_Click">
            </Button>
            <Button x:Name="AutorizationBTN" Width="100" Height="30" Content="Вход" Margin="250 -30 0 0" FontSize="15" FontWeight="Bold" Click="AutorizationBTN_Click" BorderBrush="#FFBD3939" Background="#FFFF2015">
            </Button>
        </StackPanel>

    </Grid>
</Window>
